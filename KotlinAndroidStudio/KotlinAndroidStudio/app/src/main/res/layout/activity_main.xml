<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="This is main activity"
        android:textAlignment="center"
        android:textSize="34dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2">

        <EditText
            android:id="@+id/input_playerOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name Player One..." />

        <EditText
            android:id="@+id/input_playerTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name Player Two..." />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/pencetButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PENCET"
            app:cornerRadius="15dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/pencetButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            app:cornerRadius="15dp" />

        <TextView
            android:id="@+id/name_playerOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Name"
            android:textAlignment="center"
            android:textSize="34dp" />

        <TextView
            android:id="@+id/name_playerTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Name"
            android:textAlignment="center"
            android:textSize="34dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
